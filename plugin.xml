<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="pousseCafeBuilder"
         name="Pousse-Café Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="poussecafe.eclipse.plugin.builder.PousseCafeBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="pousseCafeNature"
         name="Pousse-Café Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="poussecafe.eclipse.plugin.builder.PousseCafeNature">
         </run>
      </runtime>
      <builder
            id="poussecafe.eclipse.plugin.pousseCafeBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="poussecafe.eclipse.plugin.commands.category"
            name="Pousse-Café Nature commands">
      </category>
      <command
            categoryId="poussecafe.eclipse.plugin.commands.category"
            defaultHandler="poussecafe.eclipse.plugin.handlers.AddRemovePousseCafeNatureHandler"
            id="poussecafe.eclipse.plugin.addRemovePousseCafeNature"
            name="Add/Remove Pousse-Café nature">
      </command>
      <command
            categoryId="poussecafe.eclipse.plugin.commands.category"
            id="poussecafe.eclipse.plugin.commands.generateCode"
            name="Generate code">
      </command>
      <command
            categoryId="poussecafe.eclipse.plugin.commands.category"
            id="poussecafe.eclipse.plugin.commands.generateDoc"
            name="Generate doc">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="poussecafe.eclipse.plugin.addRemovePousseCafeNature"
               icon="icons/emil.png"
               label="Remove Pousse-Café nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="poussecafe.eclipse.plugin.pousseCafeNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="poussecafe.eclipse.plugin.addRemovePousseCafeNature"
               icon="icons/emil.png"
               label="Add Pousse-Café nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                       <and>
                            <not>
                               <test
                                     property="org.eclipse.core.resources.projectNature"
                                     value="poussecafe.eclipse.plugin.pousseCafeNature">
                               </test>
                            </not>
                            <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.eclipse.jdt.core.javanature">
                           </test>
                        </and>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="poussecafe.eclipse.plugin.toolbars.pousseCafeToolbar">
            <command
                  commandId="poussecafe.eclipse.plugin.commands.generateCode"
                  icon="icons/emil.png"
                  id="poussecafe.eclipse.plugin.toolbars.generateCode"
                  label="Generate code"
                  tooltip="Generate code using active EMIL editor&apos;s content">
            </command>
            <command
                  commandId="poussecafe.eclipse.plugin.commands.generateDoc"
                  icon="icons/doc.png"
                  id="poussecafe.eclipse.plugin.toolbars.generateDoc"
                  label="Generate doc"
                  tooltip="Generate documentation for selected projects">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="pousseCafeProblem"
         name="Pousse-Café Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="poussecafe.eclipse.plugin.editors.EmilEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="emil"
            icon="icons/emil.png"
            id="poussecafe.eclipse.plugin.editors.EmilEditor"
            name="EMIL Editor">
      </editor>
   </extension>
   <extension
         id="emilProblem"
         name="EMIL Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="poussecafe.eclipse.plugin.views"
            name="Pousse-Café">
      </category>
      <view
            category="poussecafe.eclipse.plugin.views"
            class="poussecafe.eclipse.plugin.views.ProcessListView"
            icon="icons/emil.png"
            id="poussecafe.eclipse.plugin.views.ProcessListView"
            inject="true"
            name="Process List">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="poussecafe.eclipse.plugin.handlers.GenerateCodeHandler"
            commandId="poussecafe.eclipse.plugin.commands.generateCode">
            <enabledWhen>
                <with variable="activeEditorId">
                    <equals
                          value="poussecafe.eclipse.plugin.editors.EmilEditor">
                    </equals>
                </with>
            </enabledWhen>
      </handler>
      <handler
            class="poussecafe.eclipse.plugin.handlers.GenerateDocHandler"
            commandId="poussecafe.eclipse.plugin.commands.generateDoc">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="poussecafe.eclipse.plugin.properties.PousseCafeProjectPropertyPage"
            id="poussecafe.eclipse.plugin.properties.pousseCafeProjectPropertyPage"
            name="Pousse-Café">
        <filter
           name="open"
           value="true">
         </filter>
         <enabledWhen>
            <adapt type="org.eclipse.core.resources.IProject"/>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
      <hyperlinkDetector
            activate="true"
            class="poussecafe.eclipse.plugin.hyperlink.MessageListenerHyperlinkDetector"
            id="pousse-cafe-eclipse-plugin.listenerHyperlinkDetector"
            name="listenerHyperlinkDetector"
            targetId="org.eclipse.jdt.ui.javaCode">
      </hyperlinkDetector>
   </extension>
</plugin>
